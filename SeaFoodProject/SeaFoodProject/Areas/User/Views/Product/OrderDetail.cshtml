@model IEnumerable<SeaFoodProject.CHITIETDONDAT>

@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}


<div class="card-wrap">
    <div class="cart-tittle">
        <div>
            <span class="cart-heading">ĐƠN HÀNG CỦA BẠN</span>
            
        </div>
    </div>
    <div class="cart-list">
        @*<div class="cart-item">
                <div class="cart-item__tittle">
                    <img src="https://vuacua.vn/storage/media/wqXNGdu2mEueywGLy0OOoIy9wCki09UAa1bAHTXg.png" />
                    <div class="cart-item__info">
                        <span>Cafe Đen (330 ml)</span>
                        <div class="cart-item__update">
                            <input class="cart-item__qty" />
                            <a>Xoá</a>
                        </div>
                    </div>
                </div>
                <div class="cart-item__price">
                    <span>69000đ</span>
                </div>
            </div>*@

        @{ double? sum = 0.00;
            
                foreach (var item in Model)
                {

                    sum = sum + (item.SOLUONG * item.HAISAN.GIATIEN);

                    <div class="cart-item">
                        <div class="cart-item__tittle">
                            <img src="~/Assets/admin/assets/images/haisan/@item.HAISAN.HINHANH" />
                            <div class="cart-item__info">
                                <span>@item.HAISAN.CHITIETLOAI (@item.HAISAN.DONVITINH.TENDVT)</span>
                                <div class="cart-item__update">
                                    <input id="qty+@item.HAISAN.MSHAISAN" onchange="updateQty('@item.HAISAN.MSHAISAN')" class="cart-item__qty" value="@item.SOLUONG" disabled/>
                                   
                                </div>
                            </div>
                        </div>
                        <div class="cart-item__price">

                            <span id="@item.HAISAN.MSHAISAN">  đ</span>
                            <script>
                                var a = @item.HAISAN.GIATIEN*@item.SOLUONG;
                                document.getElementById("@item.HAISAN.MSHAISAN").innerHTML = a + "đ";
                            </script>
                        </div>
                    </div>
                }

            
        }


    </div>

    <div class="payment">
        <div class="payment-tittle">
            <span>Tiền phụ:</span>
            <span>Phí giao hàng:</span>
            <span>Tổng tiền:</span>
        </div>

        <div class="payment-value">
            <span id="tienphu">@sum đ</span>
            <span>0</span>
            <span id="tongtien">@sum đ</span>

        </div>     
    </div>



</div>





