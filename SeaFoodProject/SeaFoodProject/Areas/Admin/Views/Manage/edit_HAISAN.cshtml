@model SeaFoodProject.HAISAN

@{
    ViewBag.Title = "edit_HAISAN";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="content alert-danger">
    <h2>Chỉnh sửa Thông tin Hải sản</h2>
</div>



